<!DOCTYPE html>
<html>
  <head>
    <title class = "title-logo">Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="navbar navbar-fixed-top navbar-inverse">
    <h1 class="title_logo" style="display: inline-block;">Bookers2</h1>
      <ul class="menu nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn" style="margin-top: 24px;">
        <% if user_signed_in? %>
          <span class="glyphicon glyphicon-home" aria-hidden="true">
            <%= link_to 'Home', user_path(current_user.id) %>
          </span>
          <span class="glyphicon glyphicon-user" aria-hidden="true">
            <%= link_to "Users", users_path %>
          </span>
          <span class="glyphicon glyphicon-book" aria-hidden="true">
            <%= link_to 'Books', root_path %>
          </span>
          <span class="glyphicon glyphicon-log-out" aria-hidden="true">
            <%= link_to "logout", destroy_user_session_path, method: :delete %>
          </span>
        <% else %>
        <span class="glyphicon glyphicon-home" aria-hidden="true">
            <%= link_to 'Home', homes_top_path %>
          </span>
          <span class="glyphicon glyphicon-link" aria-hidden="true">
            <%= link_to 'About', homes_about_path %>
          </span>
          <span class="glyphicon glyphicon-edit" aria-hidden="true">
            <%= link_to "sign up", new_user_registration_path %>
          </span>
          <span class="glyphicon glyphicon-log-in" aria-hidden="true">
            <%= link_to "login", new_user_session_path %>
          </span>
        <% end %>
      </ul>
</header>
<br>
<br>
<br>
<br>
<br>
<br>
  <% if flash[:notice] %>
    <div class = "flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
<br>
<br>
    <%= yield %>
  </body>
</html>

 <div class="container">
    <div class="row">
        <div class="col-lg-3"> 
            <div class="row">
            <%= render 'books/list', books: @books %>
            </div>
        </div>
        <div class="col-lg-9">
            <h1>Users</h1>
            <table class="table table-striped">
            <thead>
                <tr>
                    <th>image</th>
                    <th>name</th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                <tr>
                    <td>
                        
                            <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                        
                    </td>
                    <td><%= user.name %></td>
                    <td><%= link_to "Show", user_path(user.id) %></td>
                </tr>
                <% end %>
            </tbody>
            </table>
        </div>
    </div>
</div>


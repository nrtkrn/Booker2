<div class="container">
    <div class="row">
        <div class="col-xs-3"> 
            <div class="row">
            <%= render 'books/list', books: @books %>
            </div>
        </div>
        <div class="col-xs-9">
            <h1>Book detail</h1>
            <table class="table">
            <tbody>
                <tr>
                    <td>
                        <%= link_to user_path(@book_show.user.id) do %>
                            <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                            <br>
                            <%= @book_show.user.name %>
                        <% end %>
                        
                    </td>
                    <td>
                        <%= link_to @book_show.title, book_path(@book_show.id) %>
                    </td>
                    <td>
                        <%= @book_show.body %>
                    </td>
                    <% if @book_show.user == current_user %>
                    <td>
                        <%= link_to "Edit",  edit_book_path %>
                    </td>
                    <td>
                        <%= link_to "Destroy", book_path(@book_show), method: :delete, "data-confirm" => "本当に消しますか？" %>
                    </td>
                    <% end %>
                
                <tr>
            </tbody>
            </table>
        </div>
    </div>
</div>


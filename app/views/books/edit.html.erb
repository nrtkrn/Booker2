<% if flash[:notice] %>
        <div class = "flash">
            <%= flash[:notice] %>
        </div>
    <% end %>
    
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
        <% if @book.errors.any? %>
                <ul class = "error">
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %>error</li>
        <% end %>
                </ul>
    <% end %>

    <div class="form-group has-icon">
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
    </div>                  
    <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "Back", books_path %>